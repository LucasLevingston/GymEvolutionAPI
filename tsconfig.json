{ 
  "compilerOptions": {
    "target": "es2020", 
    "module": "CommonJS",
    "rootDir": "./",
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "src/types/index.d.ts"]    
  },"include": ["src/**/*"]

}